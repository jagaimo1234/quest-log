{
    "version": 2,
    "buildCommand": "vite build",
    "outputDirectory": "dist",
    "rewrites": [
        {
            "source": "/api/cron",
            "destination": "/api/cron.ts"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "api/index.ts": {
            "maxDuration": 10
        },
        "api/cron.ts": {
            "maxDuration": 60
        }
    },
    "crons": [
        {
            "path": "/api/cron",
            "schedule": "0 * * * *"
        }
    ]
}